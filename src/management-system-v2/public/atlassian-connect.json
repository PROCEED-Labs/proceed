{
  "name": "Confluence PROCEED",
  "description": "PROCEED in Confluence",
  "key": "confluence-proceed",
  "baseUrl": "https://pr-281---ms-server-staging-c4f6qdpj7q-ew.a.run.app",
  "vendor": {
    "name": "PROCEED",
    "url": "https://pr-281---ms-server-staging-c4f6qdpj7q-ew.a.run.app"
  },
  "authentication": {
    "type": "jwt"
  },
  "scopes": ["READ", "WRITE", "ACT_AS_USER", "ADMIN"],
  "lifecycle": {
    "installed": "/api/confluence/installed"
  },
  "modules": {
    "configurePage": {
      "url": "/confluence/config",
      "name": {
        "value": "PROCEED Configuration"
      },
      "key": "my-config-page"
    },
    "generalPages": [
      {
        "url": "/confluence",
        "key": "proceed-process-list",
        "name": {
          "value": "PROCEED Process List"
        },
        "location": "system.space.sidebar/main-links"
      }
    ],
    "dynamicContentMacros": [
      {
        "width": "200px",
        "height": "200px",
        "key": "proceed-create-macro",
        "bodyType": "none",
        "outputType": "block",
        "name": {
          "value": "PROCEED Process Modeler"
        },
        "description": {
          "value": "Create a new PROCEED Process"
        },
        "url": "/confluence/macro/{processId}",
        "editor": {
          "url": "/confluence/macro-editor/create",
          "width": "800px",
          "height": "600px"
        },
        "parameters": [
          {
            "identifier": "processId",
            "name": {
              "value": "Process ID"
            },
            "description": {
              "value": "The ID of the process to edit."
            },
            "type": "string",
            "required": true
          }
        ]
      },
      {
        "width": "200px",
        "height": "200px",
        "key": "proceed-embed-macro",
        "bodyType": "none",
        "outputType": "block",
        "name": {
          "value": "Embed PROCEED Process"
        },
        "description": {
          "value": "Embed PROCEED Processes into Confluence"
        },
        "url": "/confluence/macro/{processId}",
        "editor": {
          "url": "/confluence/macro-editor/embed",
          "width": "800px",
          "height": "600px"
        },
        "parameters": [
          {
            "identifier": "processId",
            "name": {
              "value": "Process ID"
            },
            "description": {
              "value": "The ID of the process to edit."
            },
            "type": "string",
            "required": true
          }
        ]
      }
    ]
  }
}
